{
  "name": "adonis-lucid-permission",
  "description": "Addon for Associate models with roles and permissions AdonisJS Lucid ORM",
  "version": "1.0.4",
  "engines": {
    "node": ">=20.6.0"
  },
  "type": "module",
  "main": "./build/index.js",
  "files": [
    "build/commands",
    "build/providers",
    "build/services",
    "build/src",
    "build/stubs",
    "build/configure.d.ts",
    "build/configure.js",
    "build/index.d.ts",
    "build/index.js"
  ],
  "exports": {
    ".": "./build/index.js",
    "./types": "./build/src/types.js",
    "./commands": "./build/commands/main.js",
    "./services/*": "./build/services/*.js",
    "./permissions_provider": "./build/providers/permissions_provider.js"
  },
  "scripts": {
    "clean": "del-cli build",
    "copy:templates": "copyfiles \"stubs/**/*.stub\" build",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "quick:test": "node --import=./tsnode.esm.js --enable-source-maps bin/test.ts",
    "pretest": "pnpm lint:check",
    "test": "c8 pnpm quick:test",
    "prebuild": "pnpm lint:check && pnpm clean",
    "build": "tsc",
    "postbuild": "pnpm copy:templates && pnpm index:commands",
    "prerelease": "pnpm prebuild && pnpm build && pnpm postbuild",
    "release": "release-it",
    "version": "pnpm build",
    "prepublishOnly": "pnpm build",
    "index:commands": "adonis-kit index build/commands"
  },
  "keywords": [
    "lucid",
    "permissions",
    "adonisjs"
  ],
  "author": "Fernando Isidro <luffynando@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/luffynando/adonis-lucid-permission#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/luffynando/adonis-lucid-permission.git"
  },
  "bugs": {
    "url": "https://github.com/luffynando/adonis-lucid-permission/issues"
  },
  "devDependencies": {
    "@adonisjs/assembler": "^7.4.0",
    "@adonisjs/core": "^6.5.0",
    "@adonisjs/lucid": "^20.5.1",
    "@japa/assert": "^3.0.0",
    "@japa/file-system": "^2.3.0",
    "@japa/runner": "^3.1.2",
    "@nodecfdi/eslint-config": "^1.6.0",
    "@nodecfdi/prettier-config": "^1.1.1",
    "@nodecfdi/tsconfig": "^1.4.0",
    "@swc/core": "^1.4.12",
    "@types/luxon": "^3.4.2",
    "@types/node": "^20.12.5",
    "c8": "^9.1.0",
    "copyfiles": "^2.4.1",
    "del-cli": "^5.1.0",
    "eslint": "^8.57.0",
    "eslint-define-config": "^2.1.0",
    "luxon": "^3.4.4",
    "prettier": "^3.2.5",
    "release-it": "^17.1.1",
    "sqlite3": "^5.1.7",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.4"
  },
  "peerDependencies": {
    "@adonisjs/core": "^6.5.0",
    "@adonisjs/lucid": "^20.5.1",
    "luxon": "^3.4.4"
  },
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore(release): :rocket: ${version}",
      "tagAnnotation": "v${version}",
      "tagName": "v${version}"
    },
    "github": {
      "release": true,
      "releaseName": "v${version}",
      "web": true
    }
  },
  "c8": {
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "tests/**",
      "tests_helpers/**"
    ]
  },
  "prettier": "@nodecfdi/prettier-config"
}
